<div class="container">
  <div class="row">
    <h1 class="px-4 my-4", style="background-color: #eeeeee;">会員一覧</h1>
  </div>
    
    <div class="row"></div>
      <table class="table my-5 table-hover", style="font-size: 17px;">
        <thead style="background-color: #eeeeee;">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_active %>
                <strong class="text-success">有効</strong>
               <% else %>
                <strong class="text-muted">退会</strong>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
</div>