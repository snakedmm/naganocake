<h1>会員一覧</h1>

<table width="500">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @customers.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_active == true%>
            有効
          <% else %>
            退会
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
