<div class="container">
  <h3 class="col-4 my-4" , style="background-color:#d7d7d7">注文履歴詳細</h3>
  <div class="row d-flex justify-content-center">
      <div class="col-10">
        <table>
          <tbody>
            <tr>
              <th scope="row" style="width: 50%">購入者</th>
              <td><%= @order.customer.last_name %>&nbsp;<%= @order.customer.first_name %></td>
            </tr>
            <tr>
              <th scope="row" style="width: 50%">注文日</th>
              <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
            </tr>
            <tr>
              <th scope="row" style="width: 50%">配送先</th>
              <td>〒<%= @order.post_code + " " + @order.address %></td>
            </tr>
            <tr>
              <th scope="row" style="width: 50%"></th>
              <td><%= @order.name %></td>
            </tr>
            
            <tr>
              <th scope="row" style="width: 50%">支払方法</th>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
             <tr>
              <th scope="row" style="width: 50%">注文ステータス</th>
              <td>コード確認中
              </td>
            </tr>
          </tbody>
        </table>
        <table class="table table-hover">
          <thead>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
            <th>更新ボタン後で</th>
          </thead>
          <% @order_details.each do |order_detail| %>
          <tbody>
            <td><%= order_detail.item.name %></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          <% end %>  
          </tbody>
          
        </table>
      </div>
  </div>
</div>