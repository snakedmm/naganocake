<div class="container">
  <div class="row">
    <h2 class="my-4 px-4", style="background-color:#FFDBC9">ジャンル一覧・追加</h2>
  </div>
  <div class="row">
    <div class="col  m-5">
    <%= form_with model: @genre, url:'/admin/genres',method: :post do |f| %>
　    <div class="form-group">
　      <strong><%= f.label :name, 'ジャンル名' %></strong>
        <%= f.text_field :name %>
　　    <%= f.submit '新規登録',class:"btn btn-success" %>
　   </div>
    <% end %>
    </div>
    <div class="col  m-5">
      <table class="table table-hover">
       <thead style="background-color:#FFDBC9;">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td> <%= link_to "編集する",edit_admin_genre_path(genre.id), class:"btn btn-success"%></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
</div>