<div class="container">
  <div class="row">
    <h2 class="px-4 my-4", style="background-color: #FFDBC9;">注文履歴</h2>
  </div>
  <div class="row">
      <table class="table table-hover my-5">
       <thead style="background-color: #FFDBC9;">
          <tr>
            <th class="col-3">購入履歴</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order), data: {"turbolinks" => false} do %>
              <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
              <% end %>
              </td>
            <td><%= order.customer.last_name %>&nbsp;<%= order.customer.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_i18n  %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
  <div class="row">
    <div class="col"></div>
      <%= paginate @orders %>
    <div class="col"></div>
  </div>
</div>