<h2>商品新規登録</h2>


<%= form_with model:@item do |f| %>
  <div class="form-group">
    <%= f.label:商品画像 %>
    <%= f.file_field :image accept:'image/*'%>
  </div>
  <div class="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field : product_name %>
  </div>
  <div class="form-group">
    <%= f.label :商品説明 %>
    <%= f.text_field : description %>
  </div>

  <div class="form-group">
    <%= f.label :ジャンル %>
    <%= f.collection_field : description %>
　</div>
　<div class="form-group">
　　<%= f.label :税抜価格 %>
　　<%= f.number_field : description %>
　</div>
　<div class="form-group">
　　<%= f.submit '新規' %>
　</div>
　

<% end %>


