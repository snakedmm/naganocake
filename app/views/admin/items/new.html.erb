<h2>商品新規登録</h2>


<%= form_with model: @item, url:'/admin/items',method: :post do |f| %>
  <div class="form-group">
    <%= f.label:image, '商品画像' %>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :name, '商品名' %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :introduction,'商品説明' %>
    <%= f.text_area :introduction %>
  </div>

  <div class="form-group">
    <%= f.label :genre_id ,'ジャンル' %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: "--選択してください--"}, { class: "form-control"}%>
　</div>
　<div class="form-group">
　　<%= f.label :price ,'税抜価格' %>
　　<%= f.number_field :price %>円
　</div>

　<%= f.label :is_active ,'販売ステータス' %>
　　<%= f.radio_button :is_active, "true" %>販売中
　　<%= f.radio_button :is_active, "false" %>販売停止


　<div class="form-group">
　　<%= f.submit '新規' %>
　</div>
<% end %>


