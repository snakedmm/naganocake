<div class="container">
  <h3 class="col-lg-2 my-4" , style="background-color:#d7d7d7">商品詳細</h3>
  <div class="row d-flex justify-content-center">
  　<div class="col-lg-4">
        <%= image_tag @item.image, size: "250x200" %>
    </div>
      <div class="col-lg-6">
        <table>
          <tbody>
            <tr>
              <th scope="row" style="width: 50%">商品名</th>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <th scope="row" style="width: 50%">商品説明</th>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <th scope="row" style="width: 50%">ジャンル</th>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <th scope="row" style="width: 50%">税込価格<br>(税込価格)</th>
              <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
            </tr>
             <tr>
              <th scope="row" style="width: 50%">販売ステータス</th>
              <td>
                <% if @item.is_active %>
                <strong  class="text-success">販売中</strong>
                <% else %>
                <strong class="text-muted">販売停止</strong>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="form-group mb-3">
        <%= link_to "編集する",edit_admin_item_path(@item.id), class:"btn btn-success" %>
        </div>
      </div>
  </div>
</div>