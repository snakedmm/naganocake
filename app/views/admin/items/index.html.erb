<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">

     <h2>商品一覧</h2>


<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.price.to_s(:delimited) %></td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.is_active %>
         <p  class="text-success"><strong>販売中</strong></p>
        <% elsif %>
         <p class="text-muted"><strong>販売停止</strong></p>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
