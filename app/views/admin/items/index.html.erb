<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h3 class="col-lg-2 my-4" , style="background-color:#d7d7d7">商品一覧</h3>
       <%= link_to "新規登録へ" ,new_admin_item_path ,class:"btn btn-success mb-3" %>
        <table class='table table-hover '>
          <thead style="background-color:#eaffea;">
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item) do %>
                <%= item.name %>
                <% end %>
                </td>
              <td><%= item.price.to_s(:delimited) %> 円</td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active %>
                 <p  class="text-success"><strong>販売中</strong></p>
                <% else %>
                 <p class="text-muted"><strong>販売停止</strong></p>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

   </div>
 </div>
</div>