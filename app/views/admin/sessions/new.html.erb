<div class="container">
  <div class="row">
    <div class="col-lg-3" style="background-color: #dddddd;">
      <h4>管理者ログイン</h4>
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
    <div class="col-lg-9"></div>
  </div>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", size: "40" %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード %>
        <%= f.password_field :password, autocomplete: "current-password", size: "40" %>
      </div>
    
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-blue" %>
      </div>
    <% end %>
    
    <%= render "admin/shared/links" %>
</div>