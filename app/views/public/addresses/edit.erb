<div class="container">
  <div class="row">
    <h2 class="my-4 px-4", style="background-color: #FFDBC9;">配送先編集</h2>
  </div>
    
    <%= form_with model: @address, url: address_path(@address),method: :patch do |f| %>
    
      <div class="row col-form-label-lg">
        <div class="col-1"></div>
        <div class="col-3">
          <%= f.label :"郵便番号(ハイフンなし)" %>
        </div>
        <div class="col-3">
          <%= f.text_field :post_code, autofocus: true, placeholder: "0000000", autocomplete: "post_code" %>
        </div>
      </div>
      
      <div class="row col-form-label-lg">
        <div class="col-1"></div>
        <div class="col-3">
          <%= f.label :住所 %>
        </div>
        <div class="col-3">
          <%= f.text_field :address, autofocus: true, placeholder: "住所を入力してください", autocomplete: "address", size: "40" %>
        </div>
      </div>
      
      <div class="row col-form-label-lg pb-5">
        <div class="col-1"></div>
        <div class="col-3">
          <%= f.label :宛名 %>
        </div>
        <div class="col-4">
          <%= f.text_field :name, autofocus: true, placeholder: "令和道子", autocomplete: "name" %>
        </div>
        <div class="col-4">
        <%= f.submit "編集内容を保存", class: "btn btn-success col-5" %>
        </div>
      </div>
    <% end %>
</div>