<h1>配送先編集</h1>

<%= form_with model: @address, url: address_path(@address),method: :patch do |f| %>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :post_code, autofocus: true, placeholder: "0000000", autocomplete: "post_code" %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", autocomplete: "address", size: "40" %>
  </div>
  
  <div class="field">
    <%= f.label :宛名 %>
    <%= f.text_field :name, autofocus: true, placeholder: "令和道子", autocomplete: "name" %>
  </div>
  
  <%= f.submit '編集内容を保存' %>
<% end %>