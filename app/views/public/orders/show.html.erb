<h1>注文履歴詳細</h1>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h6>注文情報</h6>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">注文日</th>
            <th scope="col">配送先</th>
            <th scope="col">支払方法</th>
            <th scope="col">ステータス</th>
          </tr>
          </thead>
        <tbody>
          <tr>
            <td><%= @order.created_at.strftime("%Y-%m-%d") %></td>
            <td><%= @order.address %>, <%= @order.post_code %>, <%= @order.name %></td>
            <td><%= @order.payment_method_i18n %></td>
            <td><%= @order.status %></td>
          </tr>
        </tbody>
      </table>
    </dev>
  </dev>
</dev>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h6>請求情報</h6>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">商品合計</th>
            <th scope="col">配送料</th>
            <th scope="col">ご請求金額</th>
          </tr>
          </thead>
          <tbody>
            <td><%= @order.total_payment - @order.shipping_cost %></td>
            <td><%= @order.shipping_cost %></td>
            <td><%= @order.total_payment %></td>
          </tbody>
        </table>
    </dev>
  </dev>
</dev>
<h6>注文内容</h6>
<table class="table table-bordered">
  <tr class="table-active">
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
  <% @sum = 0 %>
  <% @order_details.each do |order_detail| %>
    <tr>
      <td>
        <%= image_tag order_detail.item.image.variant(fill: "300x300", format: "jpeg") %>
        <%= order_detail.item.name %>
      </td>
      <td><%= order_detail.price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.price * order_detail.amount %></td>
    </tr>
      <% @sum += order_detail.price * order_detail.amount %>
  <% end %>
</table>