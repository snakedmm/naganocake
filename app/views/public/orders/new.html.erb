<%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>
  <h3>支払方法</h3>
  <%= f.radio_button :payment_method, :credit_card %>
  <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>

  <%= f.radio_button :payment_method, :transfer %>
  <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer] %>

  <h3>お届け先</h3>
  <%= f.radio_button :address_number, 1 %>
  <%= f.label :address_number_1, "ご自身の住所" %>
  <%= current_customer.address %>

  <%= f.radio_button :address_number, 2 %>
  <%= f.label :address_number_2, "登録先の住所" %>
  <%= f.collection_select(:registered, @addresses, :id, :address) %>

  <%= f.radio_button :address_number, 3 %>
  <%= f.label :address_number_3, "新しいお届け先" %>
  <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
  <%= f.text_field :post_code %>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %>

  <%= f.submit "確認画面へ進む" %>
<% end %>