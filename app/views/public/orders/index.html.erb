<div class="container">
  <div class="row">
    <h2 class="px-4 my-4", style="background-color: #FFDBC9;">注文履歴</h2>
<table class="table table-bordered">
  <thead>
    <tr style="background-color: #FFDBC9;">
      <th scope="col">注文日</th>
      <th scope="col">配送先</th>
      <th scope="col">支払金額</th>
      <th scope="col">ステータス</th>
      <th scope="col">詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= order.address %>, <%= order.post_code %>, <%= order.name %></td>
        <td><%= order.total_payment %></td>
        <td><%= order.status_i18n %></td>
        <td><%= link_to "表示する", order_path(order), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>