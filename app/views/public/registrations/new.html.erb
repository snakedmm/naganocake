<div class="container">
  <div class="row">
    <h2 class="my-4 px-4", style="background-color: #eeeeee;">新規会員登録</h2>
  </div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      
      <div class="row col-form-label-lg">
        <div class="col-1"></div>
        <div class="col-3">
          <%= f.label :名前 %>
        </div>
        <div class="col-0 mr-3">
          <%= f.label :"(姓)" %>
        </div>
        <div class="col-3">
          <%= f.text_field :last_name, autofocus: true, placeholder: "令和", autocomplete: "last_name" %>
        </div>
        <div class="col-0 mr-4">
          <%= f.label :"(名)" %>
        </div>
        <div class="col-1">
          <%= f.text_field :first_name, autofocus: true, placeholder: "道子", autocomplete: "first_name" %>
        </div>
      </div>
      
      <div class="row col-form-label-lg">
        <div class="col-1"></div>
        <div class="col-3">
          <%= f.label :フリガナ %>
        </div>
        <div class="col-0">
          <%= f.label :"(セイ)" %>
        </div>
        <div class="col-3">
          <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ", autocomplete: "last_name_kana" %>
        </div>
        <div class="col-0">
          <%= f.label :"(メイ)" %>
        </div>
        <div class="col-1">
          <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ", autocomplete: "first_name_kana" %>
        </div>
      </div>
      
      <div class="row col-form-label-lg">
        <div class="col-1"></div>
        <div class="col-3 mr-5">
          <%= f.label :メールアドレス %>
        </div>
        <div class="col-0 ml-3">
          <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", size: "40" %>
        </div>
      </div>
      
      <div class="row col-form-label-lg">
        <div class="col-1"></div>
        <div class="col-3 mr-5">
          <%= f.label :"郵便番号(ハイフンなし)" %>
        </div>
        <div class="col-0 ml-3">
          <%= f.text_field :post_code, autofocus: true, placeholder: "0000000", autocomplete: "post_code" %>
        </div>
      </div>
      
      <div class="row col-form-label-lg">
        <div class="col-1"></div>
        <div class="col-3 mr-5">
          <%= f.label :住所 %>
        </div>
        <div class="col-0 ml-3">
          <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", autocomplete: "address", size: "57" %>
        </div>
      </div>
      
      <div class="row col-form-label-lg">
        <div class="col-1"></div>
        <div class="col-3 mr-5">
          <%= f.label :"電話番号(ハイフンなし)" %>
        </div>
        <div class="col-0 ml-3">
          <%= f.text_field :phone_number, autofocus: true, placeholder: "0000000000", autocomplete: "phone_number" %>
        </div>
      </div>
      
      <div class="row col-form-label-lg">
        <div class="col-1"></div>
        <div class="col-3 mr-5">
          <%= f.label :"パスワード(6文字以上)" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </div>
        <div class="col-0 ml-3">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>
      
      <div class="row col-form-label-lg">
        <div class="col-1"></div>
        <div class="col-3 mr-5">
          <%= f.label :"パスワード(確認用)" %>
        </div>
        <div class="col-0 ml-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
      
      <div class="row my-3">
        <div class="col-4 ml-5"></div>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
    
    <div class="row">
      <h3 class="my-4 px-4", style="background-color: #eeeeee;">既に登録済みの方</h3>
    </div>
    <div class="row mb-5">
      <div class="col-1"></div>
      <h5>
        <%= link_to "/customers/sign_in" do %>
          こちら
        <% end %>
          からログインしてください。
      </h5>
    </div>
</div>