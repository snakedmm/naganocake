<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 my-4">
      <%= render 'public/genre_searches/genre' %>
    </div>
    <div class="col-md-10">
      <h2 class="col-lg-4 my-4" , style="background-color:#FFDBC9"><%= @genre.name %>一覧(全<%= @items.active_items_count %>件)</h2>
      <div class="row row-cols-4">
        <% @items.each do |item| %>
        <div class="col">
          <%= link_to item_path(item) do %>
            <%= image_tag item.image, size: "200x150" %><br>
          <% end %>
          <strong>
          <%= item.name %><br>
          ￥<%= item.add_tax_price.to_s(:delimited) %>
          </strong>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>