<h1>マイページ</h1>

<h3>登録情報</h3>
  <%= link_to "編集する", customers_information_edit_path(@customer), class:"btn btn-success" %>

<table class="table table-bordered">
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.post_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

<h3>配送先</h3>
  <%= link_to "一覧を見る", addresses_path(@customer), class: "btn btn-primary" %>

<h3>注文履歴</h3>
  <%= link_to "一覧を見る", orders_path(@customer), class: "btn btn-primary" %>